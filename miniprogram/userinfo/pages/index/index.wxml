<view class='body'>
  <view class="wrap flex flex-v">
    <view class='main flex-1'>
      <view class="line" />
      <view class="line margin-top-15" />
      <view class="item-frame-layout">
        <view class="top-item-layout" hover-class="click-hover">
          <image class="img-header" src="../../../images/icon_default_header.png" mode="widthFix" />
          <image class="img-sex" src="../../../images/icon_sex_male.png" mode="widthFix" />
          <text class="name">姓名</text>
          <image class="img-arrow" src="../../../images/icon_arrow.png" mode="widthFix" />
        </view>
        <view class="line" />
        <view class="item-layout" hover-class="click-hover">
          <text class="key">用户等级</text>
          <view class="flex-1" />
          <rate class="level" value="3" readonly void-icon="star" void-color="#eee" color="#e86c2f" size="{{15}}" />
          <image class="img-arrow" src="../../../images/icon_arrow.png" mode="widthFix" />
        </view>
        <view class="line margin-left-40 margin-right-40" />
        <view class="item-layout" hover-class="click-hover">
          <text class="key">账户</text>
          <view class="flex-1" />
          <image class="img-arrow" src="../../../images/icon_arrow.png" mode="widthFix" />
        </view>
      </view>
      <view class="line" />
      <view class="line margin-top-15" />
      <view class="item-frame-layout">
        <view class="item-layout" hover-class="click-hover">
          <text class="key">关注</text>
          <view class="flex-1" />
          <image class="img-arrow" src="../../../images/icon_arrow.png" mode="widthFix" />
        </view>
        <view class="line margin-left-40 margin-right-40" />
        <view class="item-layout" hover-class="click-hover">
          <text class="key">订单</text>
          <view class="flex-1" />
          <image class="img-arrow" src="../../../images/icon_arrow.png" mode="widthFix" />
        </view>
        <view class="line margin-left-40 margin-right-40" />
        <view class="item-layout" hover-class="click-hover">
          <text class="key">任务</text>
          <view class="flex-1" />
          <image class="img-arrow" src="../../../images/icon_arrow.png" mode="widthFix" />
        </view>
      </view>
      <view class="line" />
      <view class="line margin-top-15" />
      <view class="item-frame-layout">
        <view class="item-layout" hover-class="click-hover">
          <text class="key">关于慢漫</text>
          <view class="flex-1" />
          <image class="img-arrow" src="../../../images/icon_arrow.png" mode="widthFix" />
        </view>
      </view>
      <view class="line" />
    </view>
  </view>
</view>