/* miniprogram/userinfo/pages/follow/task/index.wxss */

.content {
  background-color: white;
}

.content>.head-layout {
  margin: 0 30rpx;
  background-color: #259674;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
}

.head-layout>.info-layout {
  display: flex;
  align-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.head-layout>.info-layout>.img-header {
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 50%;
}

.head-layout>.info-layout>.right-layout {
  flex: 1;
  margin-left: 30rpx;
  color: white;
}

.head-layout>.info-layout>.right-layout>.name {
  font-size: 34rpx;
  margin-bottom: 12rpx;
  width: 450rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  white-space: nowrap;
}

.head-layout>.money-layout {
  display: flex;
  align-content: center;
  align-items: center;
  color: white;
  padding: 30rpx 0;
  font-size: 32rpx;
}

.head-layout>.money-layout>.left-layout {
  flex: 1;
  display: flex;
  align-content: center;
  align-items: center;
}

.head-layout>.money-layout>.middle-line {
  width: 2rpx;
  height: 40rpx;
  background-color: white;
  margin: 0 10rpx;
}

.head-layout>.money-layout>.right-layout {
  flex: 1;
  display: flex;
  align-content: center;
  align-items: center;
}

.integral-layout {
  background-color: white;
}

.integral-layout > .loading-integral-layout {
  display: flex;
  align-content: center;
  align-items: center;
}

.integral-layout > .empty-integral-layout {
  text-align: center;
}

.integral-layout > .empty-integral-layout > .empty {
  width: 330rpx;
  display: flex;
  align-content: center;
  align-items: center;
  text-align: center;
  margin-left: 25%;
}

.integral-layout > .empty-integral-layout > .empty > .empty-icon {
  width: 150rpx;
  height: auto;
  display: block;
}

.integral-layout > .empty-integral-layout > .empty > .empty-hint {
  color: #cdcdcd;
}

.integral-layout > .item-layout {
  display: flex;
  align-content: center;
  align-items: center;
  padding: 50rpx 50rpx;
}

.integral-layout > .item-layout .icon {
  width: 70rpx;
  height: auto;
  display: block;
}

.integral-layout > .item-layout > .right-layout {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.integral-layout > .item-layout > .right-layout > .top-view {
  flex: 1;
  display: flex;
  align-content: center;
  align-items: center;
}

.integral-layout > .item-layout > .right-layout > .top-view > .title {
  font-weight: bold;
  font-size: 32rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 15rpx;
  width: 505rpx;
}

.integral-layout > .item-layout > .right-layout > .top-view > .icon-delete {
  width: 50rpx;
  height: auto;
  display: block;
}

.integral-layout > .item-layout > .right-layout > .bottom-view {
  flex: 1;
  display: flex;
  align-content: center;
  align-items: center;
  margin-top: 8rpx;
  font-size: 24rpx;
}

.integral-layout > .item-layout > .right-layout > .bottom-view > .info {
  color: #888;
  width: 415rpx;
}

.integral-layout > .item-layout > .right-layout > .bottom-view > .info > .middle-line {
  background-color: #e4681d;
  display: inline-block;
  width: 2rpx;
  height: 30rpx;
  margin: 0 15rpx;
  vertical-align: middle;
}

.integral-layout > .item-layout > .right-layout > .bottom-view > .time {
  text-align: right;
  max-width: 190rpx;
  font-size: 20rpx;
  color: #e4681d;
}
