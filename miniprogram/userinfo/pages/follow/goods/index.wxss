/* miniprogram/userinfo/pages/follow/goods/index.wxss */
@import "../../../../style/money.wxss";

.content {
  background-color: white;
}

.content>.head-layout {
  margin: 0 30rpx;
  background-color: #259674;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
}

.head-layout>.info-layout {
  display: flex;
  align-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.head-layout>.info-layout>.img-header {
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 50%;
}

.head-layout>.info-layout>.right-layout {
  flex: 1;
  margin-left: 30rpx;
  color: white;
}

.head-layout>.info-layout>.right-layout>.name {
  font-size: 34rpx;
  margin-bottom: 12rpx;
  width: 450rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  white-space: nowrap;
}

.head-layout>.money-layout {
  display: flex;
  align-content: center;
  align-items: center;
  color: white;
  padding: 30rpx 0;
  font-size: 32rpx;
}

.head-layout>.money-layout>.left-layout {
  flex: 1;
  display: flex;
  align-content: center;
  align-items: center;
}

.head-layout>.money-layout>.middle-line {
  width: 2rpx;
  height: 40rpx;
  background-color: white;
  margin: 0 10rpx;
}

.head-layout>.money-layout>.right-layout {
  flex: 1;
  display: flex;
  align-content: center;
  align-items: center;
}

.integral-layout {
  background-color: white;
}

.empty-integral-layout {
  text-align: center;
}

.empty-integral-layout > .empty {
  width: 330rpx;
  display: flex;
  align-content: center;
  align-items: center;
  text-align: center;
  margin-left: 25%;
}

.empty-integral-layout > .empty > .empty-icon {
  width: 150rpx;
  height: auto;
  display: block;
}

.empty-integral-layout > .empty > .empty-hint {
  color: #cdcdcd;
}

.integral-layout>.goods-item-layout {
  padding: 40rpx 30rpx;
  display: flex;
  align-content: center;
  align-items: center;
}

.integral-layout>.goods-item-layout>.goods-img {
  width: 170rpx;
  height: 170rpx;
  display: block;
  border-radius: 10rpx;
}

.integral-layout>.goods-item-layout>.right-layout {
  flex: 1;
  margin-left: 20rpx;
}

.integral-layout>.goods-item-layout>.right-layout>.top-layout {
  display: flex;
  align-content: center;
  align-items: center;
}

.integral-layout>.goods-item-layout>.right-layout>.top-layout>.top-left-view {
  width: 440rpx;
  color: #3b3b3b;
}

.integral-layout>.goods-item-layout>.right-layout>.top-layout>.top-left-view>.title-layout>.big-title {
  color: #3b3b3b;
  font-size: 32rpx;
  font-weight: bold;
}

.integral-layout>.goods-item-layout>.right-layout>.top-layout>.top-left-view>.small-title {
  color: #3b3b3b;
  font-size: 28rpx;
}

.integral-layout>.goods-item-layout>.right-layout>.top-layout>.icon-delete {
  width: 50rpx;
  height: auto;
  padding: 0 0 10rpx 10rpx;
  display: block;
}

.integral-layout>.goods-item-layout>.right-layout>.bottom-layout {
  display: flex;
  align-items: flex-end;
  align-content: center;
}

.integral-layout>.goods-item-layout>.right-layout>.bottom-layout>.left-view {
  display: flex;
  align-content: center;
  align-items: center;
}

.integral-layout>.goods-item-layout>.right-layout>.bottom-layout>.left-view>.allowance {
  color: #01907e;
  font-size: 30rpx;
}

.integral-layout>.goods-item-layout>.right-layout>.bottom-layout>.left-view>.btn-recommend {
  color: #01907e;
  border: 1rpx solid #01907e;
  border-radius: 5rpx;
  padding: 3rpx 15rpx;
  margin-right: 30rpx;
  line-height: 45rpx;
  height: 45rpx;
  font-size: 30rpx;
}

.integral-layout>.goods-item-layout>.right-layout>.bottom-layout>.right-layout {
  flex: 1;
  text-align: right;
}

.integral-layout>.goods-item-layout>.right-layout>.bottom-layout>.right-layout>.price-text {
  color: #01a99c;
  font-size: 50rpx;
  font-family: 'Corki';
  margin-left: 15rpx;
  font-weight: bold;
}

.integral-layout>.goods-item-layout>.right-layout>.bottom-layout>.right-layout>.mark {
  font-size: 20rpx;
}
