/* miniprogram/activity/pages/red_envelope_rain/index.wxss */
@import "../../../style/money.wxss";

.body {
  background: linear-gradient(to bottom, #ffbdc2, #ff7b73, #f97a6c);
}

.body >.btn-back {
  width: 30vw;
  height: auto;
  position: absolute;
  left: 0;
  top: 50rpx;
  z-index: 999;
  display: block;
}

.count-down-layout {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.count-down-layout >.bg-bottom {
  left: 0;
  bottom: 0;
  position: absolute;
  width: 100vw;
  height: auto;
  display: block;
}

.img-100vw {
  width: 80vw;
  height: auto;
  display: block;
}

.count-down-layout >.red-package-layout {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 10vw;
  box-sizing: border-box;
}

.count-down-layout >.red-package-layout >.bg-red-rain {
  left: 0;
  bottom: 0;
  position: absolute;
  width: 100vw;
  z-index: 2;
  height: auto;
  display: block;
}

.count-down-layout >.red-package-layout >.red-text {
  z-index: 3;
  position: relative;
  width: 100vw;
  left: -10vw;
  height: auto;
  display: block;
}

.count-down-layout >.bg-red-package {
  position: absolute;
  left: 10vw;
  bottom: 0;
}

.count-down-layout >.red-package-layout >.red-package-bottom {
  position: relative;
  display: block;
}

.count-down-layout >.red-package-layout >.red-package-bottom >.btn-ad {
  position: absolute;
  top: 0;
  left: 5vw;
  width: 70vw;
  height: auto;
  display: block;
}

.count-down-layout >.red-package-layout >.time-count-down-layout {
  position: relative;
}

.count-down-layout >.red-package-layout >.time-count-down-layout >.time {
  color: #d25040;
  font-size: 100rpx;
  font-weight: bold;
  font-family: 'Corki';
  position: absolute;
  text-align: center;
  width: 80vw;
}

.red-rain-layout {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.red-rain-layout >.text-layout {
  position: absolute;
  width: 100vw;
  height: auto;
  top: 0;
  left: 0;
}

.red-rain-layout >.text-layout >.score-layout {
  display: flex;
  align-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.red-rain-layout >.text-layout >.score-layout >.item-layout {
  flex: 1;
  text-align: center;
}

.red-rain-layout >.text-layout >.score-layout >.item-layout >.mark {
  color: #e54242;
}

.red-rain-layout >.text-layout >.score-layout >.item-layout >.value {
  color: #d25040;
  vertical-align: top;
  margin-top: 10rpx;
}

.red-rain-layout >.text-layout >.score-layout >.item-layout >.value >.number {
  color: #d25040;
  font-weight: bold;
  font-family: 'Corki';
  font-size: 50rpx;
}

.red-rain-layout >.text-layout >.score-layout >.item-layout >.value >.top-mark {
  vertical-align: top;
}

.red-rain-layout >.cax-canvas {
  display: flex;
  position: fixed;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  height: 100%;
}

.receiveRedPackage {
  position: absolute;
  top: 40vh;
  width: 30vw;
  margin-left: 35vw;
  z-index: 99;
  -webkit-transform: scale(0.1);
  -moz-transform: scale(0.1);
  -o-transform: scale(0.1);
  -webkit-transition: all 0.5s;
  -moz-transition: all 0.5s;
  -o-transition: all 0.5s;
  opacity: 0;
}

.receiveRedPackage.animition {
  -webkit-transform: scale(1);
  -moz-transform: scale(1);
  -o-transform: scale(1);
  opacity: 1;
}

.receiveRedPackage >.open-red-package {
  width: 100%;
  height: auto;
  display: block;
}
