/* miniprogram/activity/pages/red_envelope_rain/index.wxss */

.body {
  background: linear-gradient(to bottom, #ffbdc2, #ff7b73, #f97a6c);
}

.count-down-layout {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.count-down-layout > .bg-bottom {
  left: 0;
  bottom: 0;
  position: absolute;
  width: 100vw;
  height: auto;
  display: block;
}

.img-100vw {
  width: 80vw;
  height: auto;
  display: block;
}

.count-down-layout > .red-package-layout {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 0 10vw;
  box-sizing: border-box;
}

.count-down-layout > .red-package-layout > .bg-red-rain {
  left: 0;
  bottom: 0;
  position: absolute;
  width: 100vw;
  z-index: 2;
  height: auto;
  display: block;
}

.count-down-layout > .red-package-layout > .red-text {
  z-index: 3;
  position: relative;
  width: 100vw;
  left: -10vw;
  height: auto;
  display: block;
}

.count-down-layout > .bg-red-package {
  position: absolute;
  left: 10vw;
  bottom: 0;
}

.count-down-layout > .red-package-layout > .red-package-bottom {
  position: relative;
  display: block;
}

.count-down-layout > .red-package-layout > .red-package-bottom > .btn-ad {
  position: absolute;
  top: 0;
  left: 5vw;
  width: 70vw;
  height: auto;
  display: block;
}

.count-down-layout > .red-package-layout > .time-count-down-layout {
  position: relative;
  display: flex;
  flex-direction: column;
}
